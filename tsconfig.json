{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES6", "DOM"],
    "esModuleInterop": true
  }
}
